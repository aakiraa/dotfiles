syntax on
set nocompatible
set backspace=2
set autoindent
set laststatus=2
set statusline=%<%f\ %h%m%r%=%-14.(%l,%c%V%)\ %P
set showmatch
set smartindent
set wildmenu
colorscheme torte
set guifont=Terminus\ 12
" no menubar
set guioptions-=m
" no toolbar
set guioptions-=T

map <C-Tab> :bnext<CR>
map <S-C-Tab> :bprevious<CR>
